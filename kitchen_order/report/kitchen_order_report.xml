<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Kitchen Order Detail Template -->
        <template id="report_kitchen_order_document">
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context()" />
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row">
                        <div class="row mt32 mb32" id="order-informations">
                            <div t-if="doc.name" class="col-xs-4">
                                <strong>Order No.: </strong><span t-field="doc.name"/>
                            </div>
                            <div t-if="doc.saleorder_id" class="col-xs-4">
                                <strong>Sale Order: </strong><span t-field="doc.saleorder_id.name"/>
                            </div>
                            <div t-if="doc.product_uom_qty" class="col-xs-4">
                                <strong>Ordered Qty: </strong>
                                <span t-field="doc.product_uom_qty"/>
                                <span t-field="doc.uom"/>
                            </div>
                        </div>
                        <div class="row mt32 mb32" id="order-informations">
                            <div class="col-xs-4">
                                <div t-if="doc.product_id">
                                    <strong>Product: </strong><span t-field="doc.product_id.name"/><br/><br/>
                                </div>
                                <div t-if="doc.create_date">
                                    <strong>KO Date: </strong><span t-field="doc.create_date"/><br/>
                                </div>
                                <div t-if="doc.requested_date">
                                    <strong>Delivery Date: </strong><span t-field="doc.requested_date"/><br/>
                                </div><br/>

                                <div t-if="doc.create_date">
                                    <strong>Product Details:</strong>
                                    <p t-field="doc.product_description"/>
                                </div>
                            </div>
                            <div class="col-xs-4">
                                <div t-if="doc.message">
                                    <strong>Message:</strong>
                                    <p t-field="doc.message"/>
                                </div>
                                <div t-if="doc.create_date">
                                    <strong>KO Note:</strong>
                                    <p t-field="doc.ko_note"/>
                                </div>
                            </div>
                            <div t-if="doc.image" class="col-xs-4">
                                <img style="max-width:70%; height:auto;" t-if="doc.image" t-att-src="'data:image/png;base64,%s' % to_text(doc.image)"/>
                            </div>
                        </div>
                    </div>
                    <div class="oe_structure"/>
                </div>
            </t>
        </template>

        <template id="report_kitchen_order">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="kitchen_order.report_kitchen_order_document"/>
                </t>
            </t>
        </template>

        <!-- Kitchen Order List Template -->
        <template id="report_kitchen_order_list">
            <t t-name="kitchen_order.report_kitchen_order_list">
                <t t-call="web.html_container">
                    <t t-call="web.internal_layout">
                        <div class="page" style="font-size:14px;">
                            <t t-foreach="docs" t-as="o">
                                <div class="container" style="padding-bottom:20px;">
                                    <div class="row" style="border:1px solid #000;">
                                        <div class="col-xs-2" style="border-right:1px solid #000; padding:2px 5px;">
                                            <strong>KO No.: </strong>
                                            <p t-field="o.name"/>
                                            <strong>Sale Order: </strong>
                                            <p t-field="o.saleorder_id.name"/>
                                            <strong>Ordered Qty: </strong>
                                            <p>
                                                <span t-field="o.product_uom_qty"/>
                                                <span t-field="o.uom"/>
                                            </p>
                                        </div>
                                        <div class="col-xs-3" style="border-right:1px solid #000; padding:2px 5px;">
                                            <strong>Product:</strong>
                                            <p t-field="o.product_id.name"/>
                                            
                                            <strong>KO Date:</strong>
                                            <p t-field="o.create_date"/>

                                            <strong>Delivery Date:</strong>
                                            <p t-field="o.requested_date"/>
                                        </div>
                                        <div class="col-xs-5" style="border-right:1px solid #000; padding:2px 5px;">
                                            <strong>Product Details:</strong>
                                            <p t-field="o.product_description"/>

                                            <strong>KO Note:</strong>
                                            <p t-field="o.ko_note"/>

                                            <strong>Message:</strong>
                                            <p t-field="o.message"/>
                                        </div>
                                        <div class="col-xs-2" style="padding:10px;">
                                            <img style="max-width:100%; height:auto;" t-if="o.image" t-att-src="'data:image/png;base64,%s' % to_text(o.image)"/>
                                        </div>
                                    </div>
                                <p style="break-after:always;"/>
                                </div>
                            </t>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <report 
            id="action_report_kitchen_order"
            string="Order Details"
            model="kitchen.order" 
            report_type="qweb-pdf"
            file="kitchen_order.report_kitchen_order" 
            name="kitchen_order.report_kitchen_order"
            print_report_name="('Kitchen Order - %s' % (object.name))"/>
        <report 
            id="action_report_kitchen_order_list"
            string="Orders List"
            model="kitchen.order" 
            report_type="qweb-pdf"
            file="kitchen_order.report_kitchen_order_list" 
            name="kitchen_order.report_kitchen_order_list"
            print_report_name="('Kitchen Order List')"/>
    </data>
</odoo>
