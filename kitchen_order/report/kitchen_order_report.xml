<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_kitchen_order_document">
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context()" />
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row">
                        <div class="row mt32 mb32" id="order-informations">
                            <div t-if="doc.name" class="col-xs-3">
                                <strong>Order No.:</strong>
                                <p t-field="doc.name"/>
                            </div>
                            <div t-if="doc.saleorder_id" class="col-xs-3">
                                <strong>Sale Order:</strong>
                                <p t-field="doc.saleorder_id.name"/>
                            </div>
                            <div t-if="doc.product_uom_qty" class="col-xs-3">
                                <strong>Ordered Quantity:</strong>
                                <p t-field="doc.product_uom_qty"/>
                            </div>
                        </div>
                        <div class="row mt32 mb32" id="order-informations">
                            <div t-if="doc.product_id" class="col-xs-6">
                                <strong>Product:</strong>
                                <p t-field="doc.product_id.name"/>
                            </div>
                            <div t-if="doc.image" class="col-xs-6">
                                <img t-if="doc.image" t-att-src="'data:image/png;base64,%s' % to_text(doc.image)"/>
                            </div>
                        </div>
                        <div class="row mt32 mb32" id="date">
                            <div t-if="doc.create_date" class="col-xs-6">
                                <strong>Kitchen Order Date:</strong>
                                <p t-field="doc.create_date"/>
                            </div>
                            <div t-if="doc.requested_date" class="col-xs-6">
                                <strong>Order Requested Date:</strong>
                                <p t-field="doc.requested_date"/>
                            </div>
                        </div>
                        <div class="row mt32 mb32" id="product-details">
                            <div t-if="doc.create_date" class="col-xs-6">
                                <strong>Product Details:</strong>
                                <p t-field="doc.product_description"/>
                            </div>
                            <div t-if="doc.create_date" class="col-xs-6">
                                <strong>KO Note:</strong>
                                <p t-field="doc.ko_note"/>
                            </div>
                        </div>
                        <div class="row mt32 mb32" id="order-details">
                            <div t-if="doc.create_date" class="col-xs-12">
                                <strong>Order Details:</strong>
                                <p t-field="doc.order_description"/>
                            </div>
                        </div>
                    </div>
                    <div class="oe_structure"/>
                </div>
            </t>
        </template>

        <template id="report_kitchen_order">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="kitchen_order.report_kitchen_order_document"/>
                </t>
            </t>
        </template>
        <report 
            id="action_report_kitchen_order"
            string="Kitchen Order"
            model="kitchen.order" 
            report_type="qweb-pdf"
            file="kitchen_order.report_kitchen_order" 
            name="kitchen_order.report_kitchen_order"
            print_report_name="('Kitchen Order - %s' % (object.name))"
        />
    </data>
</odoo>
