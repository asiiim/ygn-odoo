<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_kitchen_order_tree" model="ir.ui.view">
            <field name="name">kitchen.order.tree</field>
            <field name="model">kitchen.order</field>
            <field name="arch" type="xml">
                <tree string="Kitchen Order" class="o_kitchen_order">
                    <field name="name" string="Kitchen Order Number"/>
                    <field name="product_id"/>
                    <field name="saleorder_id"/>
                    <field name="stage_id"/>
                </tree>
            </field>
        </record>

        <record id="view_kitchen_order_form" model="ir.ui.view">
            <field name="name">kitchen.order.form</field>
            <field name="model">kitchen.order</field>
            <field name="arch" type="xml">
                <form string="Kitchen Order" class="o_kitchen_order">
                    <header>
                        <field name="active" invisible="1"/>
                        <field name="stage_id" widget="statusbar" clickable="True"
                            options="{'fold_field': 'fold'}"
                            attrs="{'invisible': [('active', '=', False)]}"/>
                    </header>
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="product_id" options='{"always_reload": True}'/>
                                <field name="saleorder_id" options='{"always_reload": True}'/>
                                <field name="order_description"/>
                            </group>
                            <group>
                                <field name="requested_date"/>
                                <field name="product_description"/>
                                <field name="ko_note"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_kitchen_order_kanban" model="ir.ui.view">
            <field name="name">kitchen.order.kanban</field>
            <field name="model">kitchen.order</field>
            <field name="arch" type="xml">
                <kanban default_group_by="stage_id" 
                        class="oe_background_grey o_kanban_dashboard o_emphasize_colors o_kanban_kitchen_orders"
                        default_order="sequence">
                    <field name="name"/>
                    <field name="active"/>
                    <field name="image"/>
                    <field name="color"/>
                    <field name="priority"/>
                    <field name="stage_id" options='{"group_by_tooltip": {"requirements": "Description", "legend_priority": "Use of stars"}}'/>
                    <field name="sequence"/>
                    <field name="product_id"/>
                    <field name="product_description"/>
                    <field name="order_description"/>
                    <field name="ko_note"/>
                    <field name="saleorder_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <field name="image" widget="image" class="oe_avatar"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                            <span t-if="record.saleorder_id" class="o_kanban_record_subtitle"><field name="saleorder_id"/></span>
                                        </div>
                                    </div>
                                    <ul>
                                        <li t-if="record.product_id"> <b>Product: </b> <field name="product_id"/></li>
                                        <li t-if="record.product_description"> <b>Product Details: </b> <br /> <field name="product_description"/></li>
                                        <li t-if="record.order_description"><i class="fa fa-pencil"></i> <field name="order_description"/></li>
                                        <li t-if="record.ko_note"><i class="fa fa-edit"></i> <field name="ko_note"/></li>
                                        <li><field name="priority" widget="priority"/></li>
                                    </ul>
                                    <div class="o_kanban_button">
                                        <t t-if="record.active">
                                            <button name="cancel_kitchen_order" type="object" class="oe_highlight btn-sm btn-primary">
                                                <span>Cancel</span>
                                            </button>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
         </record>

        <record id="action_kitchen_orders" model="ir.actions.act_window">
            <field name="name">Kitchen Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kitchen.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <!-- <field name="search_view_id" ref="sale_order_view_search_inherit_sale"/> -->
            <field name="context">{}</field>
            <!-- <field name="domain">[('state', 'not in', ('draft', 'sent', 'cancel'))]</field> -->
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create a Kitchen Order, the first step of a new kitchen order.
                </p>
                <p>
                    Once the sale order is confirmed, it creates a kitchen order.
                    You'll be able to view it and change states of each kitchen order.
                    From the <i>Kitchen Orders</i> menu, you can track kitchen
                    orders.
                </p>
            </field>
        </record>

        <menuitem id="main_menu_kitchen_order" 
                    name="Kitchen Orders" 
                    sequence="1"
                    web_icon="kitchen_order,static/src/img/default_image.png"/>
        <menuitem id="menu_kitchen_order"
                    name="Orders"
                    action="action_kitchen_orders"
                    parent="main_menu_kitchen_order"
                    sequence="2"/>
    </data>
</odoo>