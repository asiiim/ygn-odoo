<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_kitchen_order_request_date_wizard" model="ir.ui.view">
        <field name="name">Kitchen Order New Requested Date</field>
        <field name="model">kitchen.requested.date.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <label for="new_req_date" string="New Requested Date"/>
                            <div class="oe_title">
                                <h2 style="color: red;">
                                    <strong><field name="new_req_date"/></strong>
                                </h2>
                            </div>
                            <button name="change_requested_date" string="Change" type="object" class="btn btn-primary"/>
                        </group>
                    </sheet>
                </form>
            </field>
    </record>
</odoo>
