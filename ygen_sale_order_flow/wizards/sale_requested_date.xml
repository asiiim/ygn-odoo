<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_change_requested_date_form" model="ir.ui.view">
        <field name="name">sale.change.requested.date.form</field>
        <field name="model">sale.requested.date</field>
        <field name="arch" type="xml">
            <form string="Change Delivery Date">
                <group>
                    <field name="requested_date"/>
                    <footer>
                        <button name="change_requested_date" string="Change" type="object" class="btn btn-primary"/>
                    </footer>
                </group>
            </form>
        </field>
    </record>
</odoo>