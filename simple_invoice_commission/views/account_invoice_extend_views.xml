<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_account_invoice_form_inherit_form" model="ir.ui.view">
            <field name="name">view.account.invoice.form.inherit.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='price_subtotal']" position="before">
                        <field name="commission_subtotal"/>
                </xpath>
            </field>
        </record>
        <record id="view_account_analytic_form_inherit_form" model="ir.ui.view">
            <field name="name">view.account.analytic.form.inherit.form</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount']" position="after">
                        <field name="commission_subtotal" readonly="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>