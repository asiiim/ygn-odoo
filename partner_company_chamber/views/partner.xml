<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="add_chamber_in_form_view" model="ir.ui.view">
        <field name="name">add chamber in form view</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="chamber" string="Chamber No." attrs="{'invisible': [('is_company','=', False)]}"/>
            </xpath>
        </field>
    </record>

    <record id="add_chamber_in_list_view" model="ir.ui.view">
      <field name="name">add chamaber in list view</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_tree"/>
      <field name="arch" type="xml">
        <field name="display_name" position="after">
          <field name="chamber" string="Chamber No."/>
        </field>
      </field>
    </record>

    <record model="ir.ui.view" id="add_chamber_in_partner_search_view">
        <field name="name">add chamber in partner search view</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <search position="inside">
                <field name="chamber" string="Chamber No."/>
            </search>
        </field>
    </record>

</odoo>