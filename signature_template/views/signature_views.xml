<odoo>
    <data>
        <record id="signature_name_view_tree" model="ir.ui.view">
            <field name="name">signature.name.tree</field>
            <field name="model">signature.name</field>
            <field name="arch" type="xml">
                <tree string="Signature">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="signature_name_view_form" model="ir.ui.view">
            <field name="name">signature.name.form</field>
            <field name="model">signature.name</field>
            <field name="arch" type="xml">
                <form string="Signature">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="signature" widget="HTML"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="signature_name_action_window" model="ir.actions.act_window">
            <field name="name">Signature</field>
            <field name="res_model">signature.name</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
