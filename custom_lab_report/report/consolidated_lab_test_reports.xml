<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_patient_consolidateds_lab_reports">
            <t t-call="custom_lab_report.lab_layout">
                    <div class="page">
                      <t t-foreach="docs" t-as="o">
                        <t t-if="o and 'company_id' in o">
                            <t t-set="company" t-value="o.company_id"> </t>
                        </t>
                        <t t-if="not o or not 'company_id' in o">
                            <t t-set="company" t-value="res_company"> </t>
                        </t>
                        <!-- <h3 style="text-decoration:underline;text-align:center;"><b>Lab Test Report</b></h3>
                        <br/>
                        <br/> -->
                          <table t-if="o_first" width="99%" style="border:1px solid black;">
                            <tr>
                                <td style="padding:1px 10px" width="20%" class="td4">PATIENT NAME</td>
                                <td style="height:25px"><b><span t-att-style="style" t-esc="o.lab_requestor.patient.name"/></b></td>
                                <td style="padding:1px 10px" width="25%" class="td4">PATIENT ID</td>
                                <td style="height:25px"><b><span t-att-style="style" t-esc="o.lab_requestor.name"/></b></td>
                                <!--<td style="width:50px;height:25px"><span>Patient: </span><span t-att-style="style" t-esc="o.lab_requestor.patient.name"/></td>-->
                                <!--<td style="width:50px;height:25px"><span>Age/Gender: </span><span t-att-style="style" t-esc="o.lab_requestor.age"/>/ <span t-att-style="style" t-esc="o.lab_requestor.gender"/></td>-->
                                <!--<td style="width:50px;height:25px"><span>Test  : </span><span t-att-style="style" t-esc="o.test_request.lab_test"/></td>-->
                                <!--<td style="width:50px;height:25px"><span>Date: </span><span t-att-style="style" t-esc="o.lab_requesting_date"/></td>-->
                            </tr>
                            <tr>
                                <td style="padding:1px 10px" width="20%" class="td4">AGE</td>
                                <td style="height:25px"><span t-att-style="style" t-esc="o.lab_requestor.age"/></td>
                                <td style="padding:1px 10px" width="25%" class="td4">SAMPLE ID</td>
                                <td style="height:25px"><span t-att-style="style" t-esc="o.sample_id"/></td>
                            </tr>
                            <tr>
                                <td style="padding:1px 10px" width="20%" class="td4">GENDER</td>
                                <td style="height:25px"><span t-att-style="style" t-esc="{False: False, 'm': 'Male', 'f': 'Female', 'ot': 'Others'}[o.lab_requestor.gender]"/></td>
                                <td style="padding:1px 10px" width="25%" class="td4">SAMPLE REGISTRATION DATE</td>
                                <td style="height:25px"><span t-att-style="style" t-esc="o.lab_requesting_date"/></td>
                            </tr>
                            <tr>
                                <td style="padding:1px 10px" width="20%" class="td4">REFFERED BY</td>
                                <td style="height:25px"><span t-att-style="style" t-esc="o.app_id.physician_id.name"/></td>
                                <td style="padding:1px 10px" width="25%" class="td4">SAMPLE REPORTING DATE</td>
                                <td style="height:25px"><span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/></td>
                            </tr>
                            <tr>
                                <td style="padding:1px 10px" width="20%" class="td4">PATIENT TYPE</td>
                                <td style="height:25px"><span t-att-style="style" t-esc="{False: False, 'in': 'Indoor', 'out': 'Outdoor'}[o.patient_type]"/></td>
                                <td style="padding:1px 10px" width="25%" class="td4">SPECIMEN</td>
                                <td style="height:25px"><span t-att-style="style" t-esc="{False: False, 'sp': 'SERUM/PLASMA', 'serum': 'SERUM', 'edta': 'EDTA BLOOD', 'fss':'FRESH STERILE SAMPLE','fu':'FRESH URINE','fs': 'FRESH STOOL','wb': 'WHOLE BODY'}[o.specimen]"/></td>
                            </tr>
                            <tr style="border:1px solid black;">
                              <td width="20%" style="padding:5px 10px;height:25px"><b><span>TEST</span></b></td>
                              <td style="text-transform: uppercase;">
                                <b><span t-att-style="style" t-esc="o.test_request.lab_test"/></b>
                              </td>
                              <td colspan="2" style="padding:5px 10px;height:30px">
                                <img alt="barcode" t-if="o.lab_requestor.patient.barcode" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.lab_requestor.patient.barcode, 600, 70)" style="max-height:25pt;max-width:100%;" align="center"/>
                              </td>
                            </tr>
                          </table>
                          <t t-if="o_first"><br/></t>
                      </t>
                          <!--<span t-field="o.text_before_result"/>-->
                          <table width="99%" style="border:1px solid #000;">
                              <thead style="background-color:#dedede; font-size:16px;">
                                 <th style="padding:3px 3px;border:1px solid #000;text-align:center;" width="13%" class="td4">Investigations</th>
                                 <th style="padding:3px 3px;border:1px solid #000;text-align:center;" width="13%" class="td4">Status</th>
                                 <th style="padding:3px 3px;border:1px solid #000;text-align:center;" width="13%" class="td4">Result</th>
                                 <th style="padding:3px 3px;border:1px solid #000;text-align:center;" width="13%" class="td4">Unit</th>
                                 <th style="padding:3px 3px;border:1px solid #000;text-align:center;" width="13%" class="td4">Reference Interval</th>
                                 <th style="padding:3px 3px;border:1px solid #000;text-align:center;" width="13%" class="td4">Method</th>
                              </thead>
                              <tbody>
                               <t t-foreach="docs" t-as="o">
                                <tr style="border:1px solid #dedede; background-color:#d6e3bc;">
                                  <td colspan="6" style="padding:2px 3px; font-size:14px; font-weight:bold">
                                    <span>[<t t-esc="o.test_request.lab_test_code"/>] <t t-esc="o.test_request.lab_test"/>:</span>
                                  </td>
                                </tr>
                                <t t-foreach="o.request_line" t-as="l">
                                  <tr style="border:1px solid #dedede;">
                                        <td style="padding:3px 3px;border:1px solid #dedede;text-align:center;"><span t-esc="l.test_content.content_type_name" style="font-size:14px;"/></td>
                                        <td style="padding:3px 3px;border:1px solid #dedede;text-align:center;"><span t-esc="l.status" style="font-size:14px;"/></td>
                                        <td style="padding:3px 3px;border:1px solid #dedede;text-align:center;"><span t-esc="l.result" style="font-size:14px;"/></td>
                                        <td style="padding:3px 3px;border:1px solid #dedede;text-align:center;"><span t-esc="l.unit.code" style="font-size:14px;"/></td>
                                        <td style="padding:3px 3px;border:1px solid #dedede;text-align:center;"><span t-esc="l.interval" style="font-size:14px;"/></td>
                                        <td style="padding:3px 3px;border:1px solid #dedede;text-align:center;"><span t-esc="l.method" style="font-size:14px;"/></td>
                                    </tr>
                                </t>
                               </t>
                              </tbody>
                          </table>
                          <!--<br/>-->
                          <!--<span t-field="o.text_after_result"/>-->
                         <br/>
                         <br/>
                         <t t-foreach="docs" t-as="o">
                          <div t-if="o_first" style="top: 40px;" t-field="o.signature_id.signature"/>
                        </t>
                  </div>
                  <p style="page-break-after:always"/>
                </t>
        </template>
    </data>
</openerp>
