<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="l10n_np.list">
      <field name="name">l10n_np list</field>
      <field name="model">res.country.district</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="country_id"/>
          <field name="state_ids"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="l10n_np.form">
      <field name="name">l10n_np form</field>
      <field name="model">res.country.district</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group string="District Information">
              <field name="name"/>
              <field name="country_id"/>
              <field name="state_ids"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="l10n_np_district_action_window">
      <field name="name">District</field>
      <field name="res_model">res.country.district</field>
      <field name="view_mode">tree,form</field>
    </record>


