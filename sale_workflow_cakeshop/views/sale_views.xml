<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_order_kitchen_order_form">
        <field name="name">Sale Order form view kitchen order</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page" position="after">
                <page string="Kitchen Orders">
                    <field name="kitchen_order_ids"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
