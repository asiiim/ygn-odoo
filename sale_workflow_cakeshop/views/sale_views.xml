    <record id="view_order_tree" model="ir.ui.view">
        <field name="name">sale.order.tree. create invoice</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <field name="amount_total" position="after">
                <field name="amount_due"/>
                <field name="delivery_validated" invisible="1"/>
            </field>
            <field name="state" position="after">
                <button name="%(sale.action_view_sale_advance_payment_inv)d" string="Create Invoice"
                    type="action" class="btn-primary"
                    attrs="{'invisible': [('invoice_status', '!=', 'to invoice')]}"/>
                <button name="%(sale.action_view_sale_advance_payment_inv)d" string="Create Invoice"
                    type="action" context="{'default_advance_payment_method': 'percentage'}"
                    attrs="{'invisible': ['|',('invoice_status', '!=', 'no'), ('state', '!=', 'sale')]}"/>
                <button name="validate_picking" class="btn-primary" string="Validate Delivery" type="object" 
                    attrs="{'invisible': [('delivery_validated', '=', True)]}"/>
            </field>
        </field>
    </record>
    <record id="view_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.tender.change</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <button name='action_quotation_send' position="before">
                <button name="validate_picking" class="btn-primary" string="Validate Delivery" type="object" 
                    attrs="{'invisible': [('delivery_validated', '=', True)]}"/>
                <button name="print_koso_report" string="Print SO/KO" type="object" class="btn-primary"/>
                <button name="view_kitchen_order" string="View KO" type="object" class="btn-primary"/>
            </button>
            <field name="payment_term_id" position="after">
                <field name="kitchen_sale_order_print_selection"/>
            </field>
            <field name="amount_total" position="after">
                <field name="delivery_validated" invisible="1"/>
                <field name="advance_payment"/>
                <field name="tender_amount" attrs="{'invisible': [('amount_due', '!=', 0.0)]}"/>
                <field name="change_amount" attrs="{'invisible': [('amount_due', '!=', 0.0)]}"/>
                <field name="amount_due" class="oe_subtotal_footer_separator"/>
            </field>
        </field>
    </record>
</odoo>
