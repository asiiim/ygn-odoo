<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="product_template_kanban_take_order_view">
        <field name="name">Product Template Kanban Take Order</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_kanban_view"/>
        <field name="arch" type="xml">
            <field name="lst_price" position="after">
                <field name="type"/>
            </field>
            <xpath expr="//div[hasclass('oe_kanban_details')]" position="after">
                <div class="mt-3">
                    <button style="position:absolute;right:5px;bottom:5px;" class="pull-right btn btn-primary text-right" name="configure_product" type="object">
                        <span>Order Now</span>
                    </button>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
