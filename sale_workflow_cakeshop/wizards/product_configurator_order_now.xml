<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_configurator_ordernow_ko_form" model="ir.ui.view">
        <field name="name">product.configurator.ordernow.ko</field>
        <field name="model">product.configurator.ordernow.ko</field>
        <field name="arch" type="xml">
            <form string="Order Configurator">
                <header>
                    
                </header>
                <sheet>
                    <!-- <field attrs="{'invisible': [('product_img', '=', False)]}" name="product_img" readonly="1" nolabel="1" widget="image"/> -->
                    <group colspan="2">
                        <!-- <group name='static_form' colspan="2" states='select'> -->
                        <group name='static_form'>
                            <field name="product_id" attrs="{'readonly': [('product_id', '!=', False)]}"/>
                            <field name="product_tmpl_id" attrs="{'readonly': [('product_id', '!=', False)]}" required="True" options="{'no_create': True}"/>
                            <field name="order_message_id"/>
                            <field name="name_for_message"/>
                            <field name="ko_notes_ids" widget="many2many_tags"/>
                            <field name="ko_note"/>
                            <field name="partner_id" domain="[('customer','=',True)]" context="{'search_default_customer':1, 'show_address': 1, 'form_view_ref': 'ygen_partner_delivery_zone.view_partner_reduced_form'}" options="{&quot;always_reload&quot;: True, &quot;no_quick_create&quot;: True}" required="True"/>
                            <field name="requested_date"/>
                            <field name="kitchen_sale_order_print_selection"/>
                        </group>
                        <group>
                            <field name="journal_id" widget="selection" required="True"/>
                            <field name="currency_id" options="{'no_create': True, 'no_open': True}" groups="base.group_multi_currency"/>

                            <label for="price_unit" string="Price" attrs="{'invisible': [('manual_price', '&gt;', 0)]}"/>
                            <div class="oe_title" attrs="{'invisible': [('manual_price', '&gt;', 0)]}">
                                <h3>
                                    <strong>
                                        <field name="price_unit"/>
                                    </strong>
                                </h3>
                            </div>

                            <label for="manual_price" string="Manual Price"/>
                            <div class="oe_title">
                                <h3>
                                    <strong>
                                        <field name="manual_price"/>
                                    </strong>
                                </h3>
                            </div>

                            <label for="product_uom_qty" string="Qty"/>
                            <div class="oe_title">
                                <h2>
                                    <strong><field name="product_uom_qty"/></strong>
                                </h2>
                            </div>
                            <field name="discount"/>
                            <label for="amount" string="Advance"/>
                            <div class="oe_title">
                                <h2 style="color:red;">
                                    <strong><field name="amount" widget="monetary"/></strong>
                                </h2>
                            </div>
                            <field name="tax_id" widget="many2many_tags" readonly="1"/>
                            <label for="price_total" string="Total"/>
                            <div class="oe_title">
                                <h2 style="color:blue;">
                                    <strong><field name="price_total" widget="monetary"/></strong>
                                </h2>
                            </div>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button type="object" name="action_order_config_done" class="oe_highlight" string="Order Now"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
