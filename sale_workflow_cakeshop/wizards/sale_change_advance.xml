<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_change_advance_form" model="ir.ui.view">
        <field name="name">sale.change.advance.form</field>
        <field name="model">sale.change.advance</field>
        <field name="arch" type="xml">
            <form string="Change Advance Amount">
                <group>
                    <field name="add_advance" readonly="1" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                    <field name="so_id" readonly="1" invisible="1"/>
                    <field name="partner_id" readonly="1" invisible="1"/>
                    <div attrs="{'invisible': [('add_advance', '=', False)]}">
                        <p>Either use advance payment for linking already created payment by filling up Advance Payment field or create one.</p>
                    </div>
                    <field name="payment_id" options="{'no_create': True, 'no_open': True}" domain="[('partner_id','=',partner_id),('payment_type', '=', 'inbound'),('state','in',('sent','posted'))]" attrs="{'invisible': [('add_advance', '=', False)]}"/>
                    <field name="adv_amount"/>
                    <field name="journal_id"/>
                    <field name="payment_date"/>
                    <footer>
                        <button name="change_advance" string="Confirm" type="object" class="btn btn-primary"/>
                    </footer>
                </group>
            </form>
        </field>
    </record>
</odoo>