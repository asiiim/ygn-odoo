<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_sales_price_form_view" model="ir.ui.view">
        <field name="name">product.template.sales.price.form</field>
        <field name="model">product.template</field>
        <field name="mode">primary</field>
        <field name="priority" eval="7" />
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" postion="after">
                <div>
                    <field name="is_base"/>
                    <label for="is_base"/>
                </div>
                <div attrs="{'invisible': [('is_base', '=', True)]}">
                    <field name="can_depend_base"/>
                    <label for="can_depend_base"/>
                </div>
            </xpath>
            <xpath expr="//page[@name='general_information']" position="inside">
                <group>
                    <group string="Sales Price Logistics" attrs="{'invisible': [('is_base', '=', True)]}">
                        <field name="weight" />
                        <field name="loss" />
                        <field name="wage" widget="monetary"/>
                        <field name="gems_cost" widget="monetary" />
                    </group>
                    <group string="Base and Variables" attrs="{'invisible': ['|', ('can_depend_base', '=', False), ('is_base', '=', True)]}">
                        <field name="base_product_id" attrs="{'invisible': ['|', ('can_depend_base', '=', False), ('is_base', '=', True)]}" />
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>