<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_ygen_security" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.ygen_security</field>
    <field name="model">res.config.settings</field>
    <field name="priority" eval="20"/>
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[hasclass('settings')]" position="inside">
        <div class="app_settings_block" id="ygen_security" data-string="Ygen Security" string="Ygen Security" data-key="ygen_security">
          <h2>Database Expiration Datetime</h2>
          <div class="row mt16 o_settings_container">
            <div class="col-xs-12 col-md-6 o_setting_box">
              <div class="o_setting_left_pane">
                <label for="expiration_datetime"/>
                <field name="expiration_datetime"/>
              </div>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>
</odoo>